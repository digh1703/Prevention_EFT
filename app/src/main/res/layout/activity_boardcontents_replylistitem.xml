<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/activity_boardContents_replyListItem_nickname"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="아이디"
        android:textColor="#000000"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/activity_boardContents_replyListItem_contents"
        android:layout_width="360dp"
        android:layout_height="18dp"
        android:paddingTop="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용글내용"
        android:textColor="#000000"
        android:textSize="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_boardContents_replyListItem_date"
            android:layout_width="50dp"
            android:layout_height="12dp"
            android:layout_marginLeft="12dp"
            android:text="20/05/10"
            android:textColor="#000000"
            android:textSize="10dp"/>

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="244dp"
            android:background="@mipmap/recommend_icon"
            />
        <TextView
            android:id="@+id/activity_boardContents_replyListItem_recommendNum"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorFont2"
            android:gravity="center"
            android:textSize="10dp"
            android:text="0"
            />
    </LinearLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#989898"/>

</LinearLayout>