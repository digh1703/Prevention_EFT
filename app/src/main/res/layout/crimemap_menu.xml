<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="440dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <Button
            android:id="@+id/murder"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:drawableLeft="@drawable/murder"
            android:linksClickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="살인"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/robbery"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"

            android:drawableLeft="@drawable/robbery"
            android:linksClickable="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:scaleType="fitCenter"
            android:text="강도"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/rape"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:drawableLeft="@drawable/rape"
            android:linksClickable="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="강간"
            android:textAlignment="gravity"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/larceny"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:drawableLeft="@drawable/larceny"
            android:linksClickable="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="절도"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/violence"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:drawableLeft="@drawable/violence"
            android:linksClickable="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="폭행"
            android:textSize="20dp"></Button>

    </LinearLayout>

</LinearLayout>